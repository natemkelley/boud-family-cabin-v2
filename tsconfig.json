{
	"compilerOptions": {
		"experimentalDecorators": true,
		"target": "ES2018",
		"module": "ESNext",
		"moduleResolution": "Node",
		"importHelpers": true,
		"allowSyntheticDefaultImports": true,
		"strictPropertyInitialization": false,
		"lib": [
			"ESNext",
			"ESNext.AsyncIterable",
			"DOM"
		],
		"esModuleInterop": true,
		"allowJs": true,
		"sourceMap": true,
		"strict": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"~/*": ["./*"],
			"@/*": ["./*"],
			"config": ["./config/*"],
			"components": ["./components/*"],
			"store": ["./store/*"]
		},
		"types": [
			"@types/node",
			"@nuxt/types",
			"@nuxtjs/firebase",
			"vuesax/types"
		]
	},
	"exclude": [
		"node_modules",
		".nuxt",
		"dist"
	],
	"include": ["typings/**/*.ts", "components/**/*.vue", "config/**/*.ts", "config/*.ts", "store/**/*.ts"]
}