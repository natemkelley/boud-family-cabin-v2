{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Node",
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "strictPropertyInitialization": false,
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "components/*": ["components/*"],
      "config/*": ["config/*"],
      "assets/*": ["assets/*"],
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "@nuxtjs/firebase",
    ]
  },
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ],
  "include": ["typings/**/*.ts"],
}
